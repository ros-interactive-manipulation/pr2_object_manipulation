<launch>
 
    <arg name="debug" default="false"/>
    <arg name="double_menu" default="false"/>
    
    <arg if="$(arg debug)" name="debug_prefix" value="xterm -e gdb -ex run --args"/>
    <arg unless="$(arg debug)" name="debug_prefix" value=""/>

    <node name="pr2_interactive_nav_action" launch-prefix="$(arg debug_prefix)" type="pr2_interactive_nav_action" pkg="pr2_interactive_gripper_pose_action" output="screen" respawn="true">
    </node>

</launch>
